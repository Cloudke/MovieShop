@model ApplicationCore.Models.Response.MovieDetailResponseModel

<div>

    <div class="row">
        <img src="@Model.BackdropUrl" width="1500" height="700"/>
    </div>


    <div class="row">
        <div class="col">            
            <img src="@Model.PosterUrl" />
        </div>

        <div class="col">
            <div class="row">
                <h1> @Model.Title</h1>
            </div>
            <div class="row">
                <h5>@Model.Tagline</h5>
            </div>

            <div>
                <div class="row">
                    <div class="col">
                        @Model.RunTime m| @Model.ReleaseDate
                    </div>

                    <div class="col">
                        @foreach (var genre in Model.Genres)
                        {
                            <h5>
                                @genre.Name
                            </h5>
                        }
                    </div>
                </div>
                <div class="row">
                    <h3>@Model.Rating</h3>
                </div>
                <div class="row">
                    @Model.Overview
                </div>
            </div>

        </div>
        <div class="col">
            <ul>
                <li>
                    <button type="button"
                            class="btn">
                        REVIEW
                    </button>
                </li>
                <li>
                    <button type="button"
                            class="btn">
                        Trailer
                    </button>
                </li>
                <li>
                    <a class="btn">
                        BUY @Model.Price
                    </a>
                </li>
                <li>
                    <a class="btn">
                        WATCH MOVIE
                    </a>
                </li>
            </ul>
        </div>
    </div>
    <div class="row">
           <div class="col">
                <h3>Movie Facts</h3>
                <hr />
                <div>Release Date</div>
                <div>Run Time</div>
                <div>Box Office</div>
                <div>Budget  @Model.Budget </div>

           </div>
           <div class="col">
               <h3>Casts</h3>
               @foreach (var cast in Model.Casts)
               {
                   <div class="row">
                       <div class="col">
                           <img src="@cast.ProfilePath"
                                alt="@cast.Name"
                                width="55" height="60" />
                       </div>
                       <div class ="col"> @cast.Name </div>
                       <div class="col"> @cast.Character</div>
                   </div>
               }
           </div>

    </div>
</div>

